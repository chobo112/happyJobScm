    		tb_cust_info.cust_person,
    		tb_cust_info.cust_person_ph,
    		tb_userinfo.loginID ,
    		tb_userinfo.password 
		FROM tb_cust_info
		LEFT JOIN tb_userinfo ON tb_userinfo.cust_id = tb_cust_info.cust_id
